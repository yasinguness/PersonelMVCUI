@model PersonelMVCUI.ViewModels.PersonelFormViewModels
@{
    ViewBag.Title = "PersonelForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PersonelForm</h2>
@using (Html.BeginForm("Kaydet", "Personel", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Personels.Ad)
        @Html.TextBoxFor(m => m.Personels.Ad, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Personels.Soyad)
        @Html.TextBoxFor(m => m.Personels.Soyad, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Personels.DepartmanId)
        @Html.DropDownListFor(m => m.Personels.DepartmanId,new SelectList(Model.Departmans,"Id","Ad"), new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Personels.Maas)
        @Html.TextBoxFor(m => m.Personels.Maas, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Personels.DogumTarihi)
        @Html.TextBoxFor(m => m.Personels.DogumTarihi, new { @class = "form-control" })
    </div>

}

